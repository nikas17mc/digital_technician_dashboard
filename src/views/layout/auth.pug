//- src/views/layout/auth.pug
//- Layout f√ºr Authentifizierung (Login, Reset, Onboarding)

extends base.pug

//- Partials
include ../partials/logo.pug
include ../partials/flash-message.pug

//- =====================================================
//- BODY / AUTH WRAPPER
//- =====================================================
block body
    body.auth-layout(data-layout="auth")

        //- Zentrale Auth-Stage
        .auth-container

            //- Branding / Logo
            .auth-header
                +logo()

            //- Flash Messages (Errors, Success, Info)
            .auth-messages
                +flashMessage()

            //- Auth-Content (Login, Register, Reset etc.)
            .auth-content
                block content
                    //- Default Fallback
                    p Auth-Content nicht definiert.

        //- Page-spezifische Scripts
        block pageScript

        //- Auth-weite Scripts (leichtgewichtig, kein App-Bundle)
        block authScripts
            script(src="./script/auth.js", defer)
