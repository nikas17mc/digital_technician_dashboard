mixin topbar(options)
    - options = options || {}
    - var title = options.title || pageTitle || null
    - var showBreadcrumbs = options.showBreadcrumbs || false
    - var breadcrumbs = options.breadcrumbs || []
    - var showUser = options.showUser !== false
    - var showSearch = options.showSearch !== false


    .topbar__left
        if title
            h1.topbar__title= title
        if showBreadcrumbs && breadcrumbs.length
            nav.topbar__breadcrumbs(aria-label="Breadcrumb")
                ol
                    each crumb, index in breadcrumbs
                        li
                            if crumb.href
                                a(href=crumb.href)= crumb.label
                            else
                                span= crumb.label
    if showSearch
        .topbar__center
            form.topbar__search(action="/search" method="get" role="search")
                input.topbar__search-input(
                    type="search"
                    name="q"
                    placeholder="Suchenâ€¦"
                    autocomplete="off"
                    aria-label="Suche"
                )
    .topbar__right
        button.topbar__action(
            type="button"
            aria-label="Benachrichtigungen"
            data-notifications-toggle
        )
            span.topbar__badge 3
            span.fas.fa-bell.fa-2x
        if showUser && user
            .topbar__user
                span.topbar__avatar
                .topbar__user-meta
                    span.topbar__user-name= user.name || user.email
                    if user.role
                        span.topbar__user-role= user.role
            .topbar__user-actions
                a.topbar__user-action(href="/profile") Profil
                a.topbar__user-action.topbar__user-action--logout(href="/logout") Logout
