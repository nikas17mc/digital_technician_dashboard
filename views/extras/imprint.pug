block scripts
    script.
        // Copy contact information to clipboard
        document.querySelectorAll('.contact-item').forEach(item => {
            item.addEventListener('click', function() {
                const text = this.innerText.replace(/\s+/g, ' ').trim();
                
                navigator.clipboard.writeText(text)
                    .then(() => {
                        const originalHTML = this.innerHTML;
                        this.innerHTML = '<i class="fas fa-check"></i><div><h5>Kopiert!</h5><p>In Zwischenablage</p></div>';
                        
                        setTimeout(() => {
                            this.innerHTML = originalHTML;
                        }, 2000);
                    })
                    .catch(err => {
                        console.error('Fehler beim Kopieren:', err);
                    });
            });
        });
        
        // Print functionality
        document.querySelector('.imprint-footer').addEventListener('click', function(e) {
            if (e.target.closest('.btn')) {
                if (e.target.closest('.btn').innerText.includes('Drucken')) {
                    window.print();
                }
            }
        });