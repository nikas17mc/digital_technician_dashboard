        function downloadTerms() {
            // Hier würde die PDF-Generierung implementiert werden
            alert('Die AGB werden als PDF heruntergeladen.');
        }
        
        // Auto-scroll to top on print
        window.addEventListener('beforeprint', () => {
            window.scrollTo(0, 0);
        });